@model AppHRM.Models.Phongban

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh Sửa Thông Tin Phòng Ban</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" type="hidden" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaPhongBan" class="control-label"></label>
                <input asp-for="MaPhongBan" class="form-control" />
                <span asp-validation-for="MaPhongBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenPhongBan" class="control-label"></label>
                <input asp-for="TenPhongBan" class="form-control" />
                <span asp-validation-for="TenPhongBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Cập Nhật" class="btn btn-primary" /> | 
                <a asp-action="Index" class="btn btn-dark">Trở lại danh sách</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
